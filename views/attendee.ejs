<body>
  <%- include('partials/navbar') %>

  <!-- Jumbotron -->
  <div class="p-5 rounded m-3" id="jumbotron">
    <h1 class="display-1 text-center" id="heading">Attendee's Portal</h1>
  </div>

  <div class="attendee-body pb-5">
    <div class="mt-3" style="padding: 15px;">
      <h2 align="center" class="track">Attendee Details</h2>
    </div>

  <div class="container">
    <div class="row custom-row">
      <div class="col-lg-4 my-5 d-flex justify-content-center align-items-center">
        <div class="btn-vertical">
          <ul>
            <li><button class="btn btn-lg custom_button" id="btn1">Information About Event </button></li>
            <li><button class="btn btn-lg custom_button" id="btn2">Tracks and Sessions</button></li>
            <li><button class="btn btn-lg custom_button" id="btn3">Pricing</button></li>
          </ul>
        </div>
      </div>
      <div class="col-lg-8 px-5 text-center event_list active" id="content1">
        <h3>Attendee Details will be displayed here</h3>
        <h4>Day <%=con.days.day[i] %>: <%=d%> </h4>
        <h5><%= con.days.eventname[i] %></h5>
        <p><%= con.days.eventdesc[i] %></p>
        <% if(con.days.paperlink[i] != "NA") { %>
        <iframe src="<%= con.days.paperlink[i] %>/preview" width="640" height="480"
          allow="autoplay"></iframe>
          <% } %>
      </div>
      <div class="col-lg-8 px-5 text-center event_list inactive" id="content2">
        <h3>Tracks and sessions </h3>
        <% if (con.tracks){%>
        
          <table id="t01">
            <% for(i=0;i<trackno.length;i++){ %>
              <tr>
                <th>Track Name:</th>
                <td>
                  <%= trackname[i] %>
                </td>
              </tr>
              <tr>
                <th>Session Name:</th>
                <td>
        
                  <ul>
                    <% for(j=0;j<con.tracks.sessionname.length;j++){%>
                      <% if(con.tracks.trackno[j]==(i+1)){ %>
                        <li>
                          <%= con.tracks.sessionname[j]%>
                        </li>
                        <%}%>
                          <%}%>
                  </ul>
                </td>
              </tr>
              <%;}%>
        
          </table>
          <%}%>
      </div>
      <div class="col-lg-8 px-5 text-center event_list inactive" id="content3">
        <h3>Table of prices</h3>
        <div class="container">
          <div class="attendees card">
            <div class="card-header">
              For Attendees
            </div>
            <div class="card-title">
              ₹100/-
            </div>
            <ul class="features">
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
        
        
            </ul>
            <a href="#">Register</a>
          </div>
          <div class="paper_presenter card">
            <div class="card-header">
              For Paper presenter
            </div>
            <div class="card-title">
              ₹500/-
            </div>
            <ul class="features">
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
        
        
            </ul>
            <a href="#">Register</a>
          </div>
          <div class="industry card">
            <div class="card-header">
              For Industry
            </div>
            <a href="#">Get in touch</a>
            <ul class="features">
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
              <li><img src="/images/checked.png" alt="checked">lorem ipsum</li>
        
        
            </ul>
            <a href="#">Contact Us</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  <script>

    var buttons = document.querySelectorAll("button");

    for (button in buttons) {
      buttons[button].onclick = function () {
        buttons.forEach(function (btn) {
          btn.classList.remove('highlight');
        })
        this.classList.add('highlight');
      }
    }
    
    
    
    document.getElementById("btn1").addEventListener("click", function () {
      document.getElementById("content1").classList.remove("inactive");
      document.getElementById("content2").classList.add("inactive");
      document.getElementById("content3").classList.add("inactive");
      document.getElementById("content4").classList.add("inactive");

    });

    document.getElementById("btn2").addEventListener("click", function () {
      document.getElementById("content1").classList.add("inactive");
      document.getElementById("content2").classList.remove("inactive");
      document.getElementById("content3").classList.add("inactive");
      document.getElementById("content4").classList.add("inactive");
    });

    document.getElementById("btn3").addEventListener("click", function () {
      document.getElementById("content1").classList.add("inactive");
      document.getElementById("content2").classList.add("inactive");
      document.getElementById("content3").classList.remove("inactive");
      document.getElementById("content4").classList.add("inactive");
    });

  </script>
  <script>
    const mobileBtn = document.getElementById("mobile-cta");
    nav = document.querySelector("nav");
    mobileBtnExit = document.getElementById("mobile-exit");

    mobileBtn.addEventListener("click", () => {
      nav.classList.add("menu-btn");
    });

    mobileBtnExit.addEventListener("click", () => {
      nav.classList.remove("menu-btn");
    });
  </script>


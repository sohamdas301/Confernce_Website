<body>
    <section id="main-start" >
      <%- include('partials/navbar') %>
        <div class="heading">
          <% if(con.title) { %>
            <h1><%= con.title %></h1>
            <%}%>
            <% if(con.fromdate) { %>
            <p> <%= con.fromdate%> - <%= con.todate%> </p>
            <%}%>
            <% if(con.venue) { %>
            <p><%= con.venue %></p>
            <%}%>
        </div>
        <div class="yt-vid">
            <iframe width="90%" height="600px" src="https://www.youtube.com/embed/<%= ans %>" title="YouTube video player"
                frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
        </div>
    </section>
<% if(con.info) { %>
      <section id="about_conference">
        <div class="info container justify-content">
          <h2>About the conference</h2>
          <p><%= con.info %></p>
        </div>
      </section>
      <%}%>
      <% if(con.gallery) { %>
   <section id="gallery">
     <h2>Gallery</h2>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="data:image/<%= con.gallery[0].img.contentType %>;base64,
      <%=con.gallery[0].img.data.toString('base64')%>" alt="First slide">
      <div class="carousel-caption d-none d-md-block">
        <p style="color: white"><%= con.gallery[0].caption %></p>
      </div>
    </div>
    <% for(var i=1;i < con.gallery.length;i++){ %>
    <div class="carousel-item">
      <img class="d-block w-100" src="data:image/<%= con.gallery[i].img.contentType %>;base64,
      <%=con.gallery[i].img.data.toString('base64')%>" alt="Second slide">
      <div class="carousel-caption d-none d-md-block">
        <p style="color: white"><%= con.gallery[i].caption %></p>
      </div>
    </div>
    <% } %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
   </section>
<% } %>


<section id="schedule">
  <div class="main-div">
    <!-- <img src="webb-dark 1.png" alt="Photo"> -->
    <div class="title">
      <h1>Conference Schedule And Agenda</h1>
    </div>

    <div class="body-container">
      <div class="days-count">
        <% for(i=1;i<=diffDays;i++){ %>
        <button class="days" id="<%= i %>">Day <%= i %></button>
        <% } %>
      </div>
      <% for(let j=1;j<=diffDays;j++){ %>
        <div class="contents" id="content<%= j %>">
      <% for(let i=0;i<con.days.day.length;i++){ %>
      <%  if(con.days.day[i]==j){ %>
        <div class="card mb-3 sch">
          <div class="row g-0">
              <div class="col-md-4 eg-1">
                <%= con.days.time[i] %>
              </div>
            <div class="col-md-8 eg-2">
              <div class="card-body">
                <h3 class="card-title"><%= con.days.eventname[i] %></h3>
                <p class="card-text"><%= con.days.eventdesc[i] %></p>
                <a href="/attendee/<%= con._id %>/<%= i %>">Click for more!</a>
              </div>
            </div>
          </div>
        </div>
       <% } %>
     <% } %>
      </div>
    <% } %>
    </div>
  </div>
</section>



  <body>

<div class="over">
  <%- include("./partials/messages") %>
  <div class="container" id="container">

    <div class="form-container sign-up-container">





      <form action="/signup" method="post">
        <h1>Create Account</h1>
        <div class="social-container">

          <a href="/auth/google" class="social"><i class="fab fa-google"></i></a>

        </div>
        <span>or use your email for registration</span>


        <div class="username">
          <input
            type="text"
            class="username-input"
            placeholder="username"
            name = "username"
            required
          />
        </div>
        <div class="email">

          <input type="email" class="email-input" placeholder="email"  name="email" required/>
        </div>
        <div class="password">
          <input
            type="password"
            class="pass-input"
            placeholder="password"
            name="password"
            required
          />
        </div>
        <div class="password">
          <input
            type="password"
            class="pass-input"
            placeholder="Confirm password"
            name="cpassword"
            required
          />
        </div>
        <button type="submit" style="margin-top: 20px"><a>  Sign Up </a></button>
      </form>
    </div>
    <div class="form-container sign-in-container">

      <form action="/login" method="post">
        <h1>Sign in</h1>
        <div class="social-container">

          <a href="/auth/google" class="social"><i class="fab fa-google"></i></a>

        </div>
        <span>or use your account</span>

        <div class="email">
          <input type="email" class="email-input" placeholder="email"  name="email" required />
        </div>
        <div class="password">
          <input
            type="password"
            class="pass-input"
            placeholder="password"
            name="password"
            required
          />
        </div>
        <a href="/forgotpassword">Forgot your password?</a>
        <button type="submit"> Sign In</button>
      </form>
    </div>
    <div class="overlay-container">
      <div class="overlay">
        <div class="overlay-panel overlay-left">
          <h1>Welcome Back , Admin!</h1>
          <p>Please login with valid credentials</p>
          <button class="ghost" id="signIn">Sign In</button>
        </div>
        <div class="overlay-panel overlay-right">
          <h1>Hello, User!</h1>
          <p>To create account, please enter your details</p>
          <button class="ghost" id="signUp">Sign Up</button>
        </div>
      </div>
    </div>
